<% if flash[:alert] %>
  <div class="alert danger alert-dismissible fade show" role="alert">
    <button class="close" data-dismiss="alert">x</button>
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-dismissible fade show" role="alert">
    <button class="close" data-dismiss="alert">x</button>
    <%= flash[:notice] %>
  </div>
<% end %>